/* pages/equipmentControl/equipmentControl.wxss */

.allcontent{
  border: 3rpx solid white;
  border-radius: 20rpx;
  background-color: white;
}

.outContent{
  margin-top: 20rpx;
  margin-left: 20rpx;
}

.content {
  display: flex;
  /* justify-content: space-around; */
  flex-wrap: wrap;
  flex-direction: row;
  margin: 10rpx;
  
}

.warning {
  font-style: italic;
  font-size: large;
  font-weight: lighter;
  display: flex;
  align-items: center;
  justify-content: center;
}

.card {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  height: 290rpx;
  width: 40%;
  border-radius: 40rpx;
  background-color: #f4d160;
  box-shadow:5px 2px 6px rgb(46, 43, 43);
  position: relative;
  margin-top: 20rpx;
  margin-left: 2%;
  margin-right: 2%;
  padding: 20rpx;
}

.head {
  display: flex;
  flex-direction: row;
  position: relative;
}

.txt {
  color: black;
  font-size :35rpx
}



.divLine{
  margin-top: 15px;
  background: lightgrey;
  width: 100%;
  height: 5rpx;
 }
 .title {
  margin-top: 30rpx;
  margin-left: 30rpx;
  font-size: large;
  font-weight: bold;
  padding: 30rpx;
}

.block {
  margin:0rpx 30rpx;
  padding-bottom: 30rpx;
  border: 3rpx solid white;
  border-radius: 20rpx;
  background-color: white;
}