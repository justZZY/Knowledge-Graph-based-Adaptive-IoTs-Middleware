/* 表格代码   */
.table {
  border: 1px solid #dddddd;
  border-right: 0;
  border-bottom: 0;
  width: 98%;
  margin-left: 1%;
}

.tr {
  display: flex;
  width: 100%;
  justify-content: center;
  height: 3rem;
  align-items: center;
}

.td {
  width: 50%;
  justify-content: center;
  align-items: center;
  color: #4f4f4f;
  display: flex;
  font-size: 25rpx;
  height: 99%;
  border-bottom: 1px solid #dddddd;
  border-right: 1px solid #dddddd;
}

/*
 用于列表隔行的颜色变化
 */
.tdColor {
  background: #f7f7f7;
}

/*
 表头颜色
 */
